# Server Configuration
NODE_ENV=production
SERVER_HOST=127.0.0.1
SERVER_PORT=3000
CORS_ORIGINS=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/paper_trading
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=paper_trading
DB_MAX_CONNECTIONS=100

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
CACHE_TTL=300

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters-long
JWT_ACCESS_TOKEN_EXPIRY_HOURS=1
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7
JWT_ISSUER=paper-trading-platform
JWT_AUDIENCE=paper-trading-users

# CoinGecko API Configuration
COINGECKO_API_KEY=
COINGECKO_USE_PRO=false
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_PRO_BASE_URL=https://pro-api.coingecko.com/api/v3
COINGECKO_WS_URL=wss://stream.coingecko.com/v1
COINGECKO_RATE_LIMIT=30
COINGECKO_TIMEOUT_SECS=10

# Binance API Configuration
BINANCE_API_BASE_URL=https://api.binance.com/api/v3
BINANCE_WS_BASE_URL=wss://stream.binance.com:9443/ws

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

# Features
ENABLE_COMPETITIONS=true
ENABLE_LEADERBOARDS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PAPER_TRADING=true
ENABLE_PRICE_ALERTS=true
ENABLE_WEBHOOKS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
MAX_PAGE_SIZE=1000
DEFAULT_PAGE_SIZE=50